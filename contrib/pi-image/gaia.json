{
  "variables": {},
  "builders": [{
    "type": "arm",
    "file_urls" : ["http://os.archlinuxarm.org/os/ArchLinuxARM-rpi-aarch64-latest.tar.gz"],
    "file_checksum_url": "http://os.archlinuxarm.org/os/ArchLinuxARM-rpi-aarch64-latest.tar.gz.md5",
    "file_checksum_type": "md5",
    "file_unarchive_cmd": ["bsdtar", "-xpf", "$ARCHIVE_PATH", "-C", "$MOUNTPOINT"],
    "file_target_extension": "tar.gz",
    "image_build_method": "new",
    "image_path": "gaia.img",
    "image_size": "6G",
    "image_type": "dos",
    "image_partitions": [
      {
        "name": "boot",
        "type": "c",
        "start_sector": "2048",
        "filesystem": "vfat",
        "size": "256M",
        "mountpoint": "/boot"
      },
      {
        "name": "root",
        "type": "83",
        "start_sector": "526336",
        "filesystem": "ext4",
        "size": "0",
        "mountpoint": "/"
      }
    ],
    "qemu_binary_source_path": "/usr/bin/qemu-aarch64-static",
    "qemu_binary_destination_path": "/usr/bin/qemu-aarch64-static"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "pacman-key --init",
        "pacman-key --populate archlinuxarm",
        "mv /etc/resolv.conf /etc/resolv.conf.bk",
        "echo 'nameserver 8.8.8.8' > /etc/resolv.conf",
        "echo 'nameserver 1.1.1.1' >> /etc/resolv.conf",
        "pacman -Syyu --noconfirm --needed",
        "pacman -S parted --noconfirm --needed"
      ]
    },
    {
      "type": "file",
      "source": "contrib/pi-image/gaiad.service",
      "destination": "/etc/systemd/system/gaiad.service"
    },
    {
      "type": "shell",
      "inline": [
        "pacman -S go docker git base-devel wget leveldb npm --noconfirm --needed",
        "mkdir /go",
        "export PATH=$PATH:/go/bin",
        "export GOPATH=/go",
        "git clone https://github.com/cosmos/gaia",
        "cd gaia",
        "git checkout v2.0.13",
        "go mod vendor",
        "make build",
        "make install",
        "mkdir -p /gaia/config",
        "wget -O /gaia/config/genesis.json https://raw.githubusercontent.com/cosmos/launch/master/genesis.json",
        "systemctl enable gaiad.service"
        "systemctl enable gaiad.service",
        "systemctl enable sshd"
      ]
    },
    {
      "type": "file",
      "source": "contrib/pi-image/resizerootfs",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "contrib/pi-image/bootstrap_resizerootfs.sh"
    }
  ]
}